<h1>Listing brands</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Filename</th>
    <th>Thumbnail</th>
    <th>Content type</th>
    <th>Size</th>
    <th>Width</th>
    <th>Height</th>
  </tr>

<% for brand in @brands %>
  <tr>
    <td><%=h brand.name %></td>
    <td><%=h brand.description %></td>
    <td><%=h brand.filename %></td>
    <td><%=h brand.thumbnail %></td>
    <td><%=h brand.content_type %></td>
    <td><%=h brand.size %></td>
    <td><%=h brand.width %></td>
    <td><%=h brand.height %></td>
    <td><%= link_to 'Show', brand %></td>
    <td><%= link_to 'Edit', edit_brand_path(brand) %></td>
    <td><%= link_to 'Destroy', brand, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

